
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/js/Game.js"></script>
    <link rel="stylesheet" type="text/css" href="~/css/HeroPage.css">
    <title>Hero Page</title>
</head>
<body>
    <div class="grid-container" >
        <div class="grid-heropicture">
            <div id="avatar-container" class="inline unselectable" title="Hero Avatar">
                <img id="avatar" src="">
            </div>
        </div>
        <div class="grid-heroname">
            <h2 id="name" title="Name"></h2>
        </div>
        <div class="grid-herohp">
            <h2 id="hp" title="Health Points" class="inline"></h2>
        </div>
        <div class="grid-heroexp">
            <div id="skillpoint-container">
                <h4 id="level">Level</h4>
                <div class="inline">
                    <h4 class="inline" style="margin-left:30px">Skillpoints: </h4>
                    <h4 id="skillpoint"></h4>
                </div>
            </div>
            <div style="display:block">
                <label style="display:block">
                    EXP:
                    <div class="inline" id="expcount">0/100</div>
                </label>
                <progress style="width:300px" value="0" max="100" id="expbar"></progress>
            </div>
        </div>
        <div class="grid-heroattr">
            <table id="attributes-container" title="Attributes" align="center">
                <tr>
                    <td class="attribute-title" title="Attack">ATK</td>
                    <td class="attribute-title" title="Defense">DEF</td>
                    <td class="attribute-title" title="Agility">AGI</td>
                    <td class="attribute-title" title="Vitality">VIT</td>
                </tr>
                <tr>
                    <td class="attribute button unselectable" id="atk" title="Attack"></td>
                    <td class="attribute button unselectable" id="def" title="Defense"></td>
                    <td class="attribute button unselectable" id="agi" title="Agility"></td>
                    <td class="attribute button unselectable" id="vit" title="Vitality"></td>
                </tr>
            </table>
        </div>
        <div id="skills-container" class="grid-heroskill">
            <table id="skills-table" title="Skills" align="center" class="equalDivide" cellpadding="0" cellspacing="0">
                <tr class="skills-row">
                    <td class="button unselectable" title="Counter-Attack" id="CounterAttack">
                        <span id="CounterAttack-Icon" class="skill-icon">🤺</span>
                        <span id="CounterAttack-Desc">When hit, gives a certain chance of attacking the enemy back.</span>
                    </td>
                    <td class="button unselectable" title="Critical Strike" id="CriticalStrike">
                        <span id="CriticalStrike-Icon" class="skill-icon">⚔</span>
                        <span id="CriticalStrike-Desc">Gives a small chance of dealing double damage.</span>
                    </td>
                </tr>
                <tr class="skills-row">
                    <td class="button unselectable" title="Learning" id="Learning">
                        <span id="Learning-Icon" class="skill-icon">📖</span>
                        <span id="Learning-Desc">Recieve 2 times the experience points for defeating an enemy.</span>
                    </td>
                    <td class="button unselectable" title="Regenerate" id="Regenerate">
                        <span id="Regenerate-Icon" class="skill-icon">💕</span>
                        <span id="Regenerate-Desc">Regenerates a small percenage of the Hero's health points after battle.</span>
                    </td>
                </tr>
                <tr class="skills-row">
                    <td class="button unselectable" title="Revive" id="Revive">
                        <span id="Revive-Icon" class="skill-icon">💖</span>
                        <span id="Revive-Desc">Has a chance of reviving the Hero 1 time.</span>
                    </td>
                    <td class="button unselectable" title="Scavenge" id="Scavenge">
                        <span id="Scavenge-Icon" class="skill-icon">☠</span>
                        <span id="Scavenge-Desc">Adds another chance of getting an item from the enemy after battle.</span>
                    </td>
                </tr>
            </table>
        </div>
        <div class="grid-enemy">
            <button id="fightbutton" class="unselectable">
                Fight
            </button>
            <H3 id="enemy-name"></H3>
            <h4 id="enemy-hp"></h4>
            <table id="enemy-attributes-container" title="Attributes" style="display:none" align="center">
                <tr>
                    <td class="attribute-title" title="Attack">ATK</td>
                    <td class="attribute-title" title="Defense">DEF</td>
                    <td class="attribute-title" title="Agility">AGI</td>
                    <td class="attribute-title" title="Vitality">VIT</td>
                </tr>
                <tr>
                    <td class="attribute button unselectable" id="enemy-atk" title="Attack"></td>
                    <td class="attribute button unselectable" id="enemy-def" title="Defense"></td>
                    <td class="attribute button unselectable" id="enemy-agi" title="Agility"></td>
                    <td class="attribute button unselectable" id="enemy-vit" title="Vitality"></td>
                </tr>
            </table>
            <div id="result-title" style="display:none">Fight result</div>
            <div id="fightlog">
            </div>
            <div id="endmessage">
            </div>
        </div>
    </div>
</body>
</html>